<div class="container">
  <h1>Create a bookmark</h1>
  <div class="form" >
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="form-input">
        <%= f.input :comment %>
        <%= f.association :movie %>
      </div>
      <div class="btn-link">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>
