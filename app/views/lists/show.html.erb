<div class="list-header" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">>
  <h1><%= @list.name %></h1>
  <%= link_to "Add bookmark", new_list_bookmark_path(@list),   class:"btn-link" %>
</div>

<div class="container">
    <% @list.movies.each do |movie| %>
    <div class="card-product-infos card-product">
    <%= cl_image_tag movie.poster_url, height: 300, crop: :fill %>
    <p><%= movie.title %></p>
    </div>
    <% end %>
</div>
